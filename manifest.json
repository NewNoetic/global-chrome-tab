{
    "name": "New Tab Anywhere",
    "version": "2.0",
    "manifest_version": 2,
    "icons": {
        "128": "new-tab.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs"
    ],
    "commands": {
        "new-tab": {
            "suggested_key": {
                "default": "Alt+Shift+F",
                "mac": "Command+Shift+F",
                "linux": "Alt+Shift+F"
            },
            "description": "Open a new Chrome tab from any application instead of having to switch to Chrome first."
        },
        "new-window": {
            "description": "Open a new window."
        },
        "new-incognito-window": {
            "description": "Open an incognito window."
        }
    }
}
